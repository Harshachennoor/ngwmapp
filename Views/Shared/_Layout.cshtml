<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ngwmapp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ngwmapp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    @* Main Header Top Bar *@
    <div class="mainHeader">
        <div id="company">
            <a id="companyLogo" asp-action="LoginForm" asp-controller="Home">
                <img src="~/images/logo.png" alt="logo" class="cLogo" />
            </a>
            <a href="www.google.com" id="companyTitle">GLOBAL WELD MANAGEMENT</a>
        </div>
        <div class="menu-btn">
            <i class="fa-solid fa-bars" onclick="toggleMenu()"></i>
        </div>
    </div>
    <div id="collapsibleMenu" class="menu">
        <div class="mainOptions">
            <ul>
                <li>
                    <a asp-action="Index" asp-controller="Home">
                        <div class="homeIcon"><i class="fa-solid fa-house"></i>
                        </div>
                        <div class="menuText homeText">@ngwmapp.Resources.Resources.menuOne</div>
                    </a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="LoginForm">
                        <div class="loginIcon"><i class="fa-solid fa-user"></i>
                        </div>
                        <div class="menuText loginText">@ngwmapp.Resources.Resources.menuTwo</div>
                    </a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Contactform">
                        <div class="contactIcon"><i class="fa-solid fa-file-lines"></i>
                        </div>
                        <div class="menuText contactText">@ngwmapp.Resources.Resources.menuThree</div>
                    </a>
                </li>
                <li>
                    <a asp-action="About" asp-controller="Home">
                        <div class="aboutIcon">
                            <i class="fa-solid fa-circle-question"></i>
                        </div>
                        <div class="menuText aboutText">@ngwmapp.Resources.Resources.menuFour</div>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="mainContainer">
        <div class="menuBar">
            <div class="mainMenuBar">
                <ul>
                    <li>
                        <button id="collapseExpandBtn" style="margin-left: 190px;">-</button>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Home">
                            <div class="homeIcon"><i class="fa-solid fa-house"></i>
                            </div>
                            <div class="menuText homeText">@ngwmapp.Resources.Resources.menuOne</div>
                        </a>
                    </li>
                    <li>
                        <a asp-action="LoginForm" asp-controller="Account">
                            <div class="loginIcon"><i class="fa-solid fa-user"></i>
                            </div>
                            <div class="menuText loginText">@ngwmapp.Resources.Resources.menuTwo</div>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Contactform">
                            <div class="contactIcon"><i class="fa-solid fa-file-lines"></i>
                            </div>
                            <div class="menuText contactText">@ngwmapp.Resources.Resources.menuThree</div>
                        </a>
                    </li>
                    <li>
                        <a asp-action="About" asp-controller="Home">
                            <div class="aboutIcon">
                                <i class="fa-solid fa-circle-question"></i>
                            </div>
                            <div class="menuText aboutText">@ngwmapp.Resources.Resources.menuFour</div>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="socialMenu">
                <hr>
                <ul>
                    <li>
                        <a href="#dialCall">
                            <div class="phoneIcon"><i class="fa-solid fa-phone"></i>
                            </div>
                            <div class="menuText phoneText">: +1 (847) 250-5240</div>
                        </a>
                    </li>
                    <li>
                        <a href="#facebook">
                            <div class="facebookIcon"> <i class="fab fa-facebook-f"></i>
                            </div>
                            <div class="menuText facebookText">Facebook</div>
                        </a>
                    </li>
                    <li>
                        <a href="#twitter">
                            <div class="twitterIcon"> <i class="fa-brands fa-x-twitter"></i>
                            </div>
                            <div class="menuText twitterText">Twitter</div>
                        </a>
                    </li>
                    <li>
                        <a href="#linkedin">
                            <div class="linkedinIcon"><i class="fab fa-linkedin"></i></div>
                            <div class="menuText linkedinText">Linkedin</div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="bodyContainer">
            <div class="searchLanguage">
                <div class="search-container">
                    <input type="text" id="searchBar" class="search-input" placeholder="Search...">
                    <button onclick="performSearch()" class="search-button">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <div class="dropdown">
                    <button class="dropbtn">@ngwmapp.Resources.Resources.languageSelection <i
                            class="fa-solid fa-caret-down"></i></button>
                    <div class="dropdown-content" id="myDropdown">
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="en-US"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageOne</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="zh-CN"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageTwo</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="da-DK"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageThree</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="nl-NL"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageFour</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="de-DE"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageFive</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="el-GR"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageSix</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="pt-BR"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageSeven</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="es-ES"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageEight</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="fr-FR"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageNine</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="it-IT"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageTen</a>
                        <a asp-action="SetLanguage" asp-controller="Language" asp-route-culture="tr-TR"
                            asp-route-returnUrl="@Url.Action("Index", "Home")">@ngwmapp.Resources.Resources.languageEleven</a>
                    </div>
                </div>
            </div>
            <div class="websiteContent">
                @RenderBody()
            </div>
            <hr>
            <footer id="footer header-dark" class="d-print-none customizeFooter">
                <div class="footer-content">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="widget">

                                    <div class="widget-title">Global Weld Management (GWM) --
                                        <span>@ngwmapp.Resources.Resources.footerTitle </span>--</div>
                                    <hr>
                                </div>
                            </div>
                            <div class="col-md-12" style="margin-top: 1rem;">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="widget">
                                            <div class="widget-title" style="margin-bottom: 0.5rem;">
                                                @ngwmapp.Resources.Resources.footerOneSub
                                            </div>
                                            <ul class="list">
                                                <li><a href="#">@ngwmapp.Resources.Resources.footerOneSubOne</a></li>
                                                <li><a
                                                        href="/Home/TermsAndConditions">@ngwmapp.Resources.Resources.footerOneSubTwo</a>
                                                </li>
                                                <li><a
                                                        href="/Home/PrivacyPolicy">@ngwmapp.Resources.Resources.footerOneSubThree</a>
                                                </li>
                                                <li><a
                                                        href="/Home/Contact">@ngwmapp.Resources.Resources.footerContactUsTag</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="widget">
                                            <div class="widget-title" style="margin-bottom: 0.5rem;">
                                                @ngwmapp.Resources.Resources.footerTwoSub</div>
                                            <ul class="list">
                                                <li><a
                                                        href="/Home/About">@ngwmapp.Resources.Resources.footerTwoSubOne</a>
                                                </li>
                                                <li><a href="#">@ngwmapp.Resources.Resources.footerTwoSubTwo</a></li>
                                                <li><a href="#">@ngwmapp.Resources.Resources.footerTwoSubThree</a></li>
                                                <li><a
                                                        href="/Home/Contact">@ngwmapp.Resources.Resources.footerContactUsTag</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="widget">
                                            <div class="widget-title" style="margin-bottom: 0.5rem;">
                                                @ngwmapp.Resources.Resources.footerThreeSub</div>
                                            <ul class="list">
                                                <li><a
                                                        href="/Account/Login">@ngwmapp.Resources.Resources.footerThreeSubOne</a>
                                                </li>
                                                <li><a
                                                        href="/Home/Pricing">@ngwmapp.Resources.Resources.footerThreeSubTwo</a>
                                                </li>
                                                <li><a
                                                        href="/Home/Contact">@ngwmapp.Resources.Resources.footerContactUsTag</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="widget">
                                            <div class="widget-title" style="margin-bottom: 0.5rem;">
                                                @ngwmapp.Resources.Resources.footerFourSub</div>
                                            <ul class="list">
                                                <li><a href="#">@ngwmapp.Resources.Resources.footerFourSubOne</a></li>
                                                <li><a href="#">@ngwmapp.Resources.Resources.footerFourSubTwo</a></li>
                                                <li><a href="#">@ngwmapp.Resources.Resources.footerFourSubThree</a></li>
                                                <li><a
                                                        href="/Home/Contact">@ngwmapp.Resources.Resources.footerContactUsTag</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
                <div class="copyright-content">
                    <div class="container" style="padding-top: 2rem;">
                        <div class="copyright-text text-center">© 2024 ECE Global.
                            <span>@ngwmapp.Resources.Resources.footerEnd</span></div>
                    </div>
                </div>
            </footer>

        </div>
    </div>

    <script>
        document.getElementById("collapseExpandBtn").addEventListener('click', function () {
            var menuBar = document.querySelector('.menuBar');
            var bodyContainer = document.querySelector('.bodyContainer');
            menuBar.classList.toggle('collapsed');
            bodyContainer.classList.toggle('collapsed');
            this.textContent = menuBar.classList.contains('collapsed') ? "+" : "-";
            this.style.marginLeft = menuBar.classList.contains('collapsed') ? "35px" : "190px";
            menuBar.style.width = menuBar.classList.contains('collapsed') ? "45px" : "205px";
        });

        function toggleMenu() {
            var icon = document.querySelector('.fa-bars');
            if (icon) {
                document.getElementById("collapsibleMenu").style.width = "10rem";
                icon.classList.remove('fa-bars');
                icon.classList.add('fa-xmark');
            }
            else {
                icon = document.querySelector('.fa-xmark');
                document.getElementById("collapsibleMenu").style.width = "0";
                icon.classList.remove('fa-xmark');
                icon.classList.add('fa-bars');
            }
        }
        function dropdownToggle() {
            document.getElementById("myDropdown").classList.toggle("show");
        }

        // Close the dropdown if the user clicks outside of it
        window.onclick = function (event) {
            if (!event.target.matches('.dropbtn')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }

        // Add the event listener to the dropdown button
        document.querySelector('.dropbtn').addEventListener('click', dropdownToggle);
        function performSearch() {
            var query = document.getElementById('searchBar').value;
            alert('Searching for: ' + query);
            document.getElementById('searchBar').value = "";
            // Implement the logic to perform the search or redirect to the search results page
            // For example, if you're using a server-side language like PHP:
            // window.location.href = '/search.php?query=' + encodeURIComponent(query);
        }

    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
