    <script>
        document.getElementById("collapseExpandBtn").addEventListener('click', function () {
            var menuBar = document.querySelector('.menuBar');
            var bodyContainer = document.querySelector('.bodyContainer');
            menuBar.classList.toggle('collapsed');
            bodyContainer.classList.toggle('collapsed');
            this.textContent = menuBar.classList.contains('collapsed') ? "+" : "-";
            this.style.marginLeft = menuBar.classList.contains('collapsed') ? "35px" : "190px";
            menuBar.style.width = menuBar.classList.contains('collapsed') ? "45px" : "205px";
        });

        function toggleMenu() {
            var icon = document.querySelector('.fa-bars');
            if (icon) {
                document.getElementById("collapsibleMenu").style.width = "10rem";
                icon.classList.remove('fa-bars');
                icon.classList.add('fa-xmark');
            }
            else {
                icon = document.querySelector('.fa-xmark');
                document.getElementById("collapsibleMenu").style.width = "0";
                icon.classList.remove('fa-xmark');
                icon.classList.add('fa-bars');
            }
        }
        function dropdownToggle() {
            document.getElementById("myDropdown").classList.toggle("show");
        }

        // Close the dropdown if the user clicks outside of it
        window.onclick = function (event) {
            if (!event.target.matches('.dropbtn')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.classList.contains('show')) {
                        openDropdown.classList.remove('show');
                    }
                }
            }
        }

        // Add the event listener to the dropdown button
        document.querySelector('.dropbtn').addEventListener('click', dropdownToggle);
        function performSearch() {
            var query = document.getElementById('searchBar').value;
            alert('Searching for: ' + query);
            // Implement the logic to perform the search or redirect to the search results page
            // For example, if you're using a server-side language like PHP:
            // window.location.href = '/search.php?query=' + encodeURIComponent(query);
        }

    </script>
