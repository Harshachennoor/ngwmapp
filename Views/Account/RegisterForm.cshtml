@model Customer
<div class="registrationForm">
    <div class="registrationHeading">
        <h2>Fill the following details to create your Account</h2>
    </div>
    <form asp-action="RegisterForm" method="post" id="registerForm">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="registrationDiv">
            <div class="generalInfo">
                <div class="form-group">
                    <label asp-for="FirstName" class="form-label">First Name:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="FirstName" required>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="form-label">Last Name:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="LastName" required>
                    <span asp-validation-for="LastName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label">Phone number:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="PhoneNumber" required>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WebsiteUrl" class="form-label">Webiste Url:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="WebsiteUrl" required>
                    <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password:<span class="Asterix">* </span></label>
                    <input class="form-control" type="password" asp-for="Password" id="password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Confirm Password:<span class="Asterix">* </span></label>
                    <span id="passwordMisMatch" class="text-danger"></span>
                    <input class="form-control" type="password" id="confirmPassword" required>
                </div>
            </div>
            <div class="companyInfo">
                <div class="form-group">
                    <label asp-for="CompanyName" class="form-label">Company name:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="CompanyName" required>
                    <span asp-validation-for="CompanyName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Country" class="form-label">Country:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="Country" required>
                    <span asp-validation-for="Country" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="AddressOne" class="form-label">Address one:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="AddressOne" required>
                    <span asp-validation-for="AddressOne" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="AddressTwo" class="form-label">Address two:</label>
                    <input class="form-control" asp-for="AddressTwo">
                </div>
                <div class="form-group">
                    <label asp-for="City" class="form-label">City:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="City" required>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="State" class="form-label">State:<span class="Asterix">* </span></label>
                    <input class="form-control" asp-for="State" required>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="form-label">Postal code:<span class="Asterix">*</span></label>
                    <input class="form-control" asp-for="PostalCode" required>
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="registrationHeading">
            <input type="hidden" asp-for="CustomerId" value="@ViewBag.CurrentID">
            <button type="submit" class="btn btn-primary m-2">Register</button>
        </div>
    </form>
</div>
<script>
    document.getElementById("registerForm").onsubmit = function () {
        var password = document.getElementById('password').value;
        var confirmPassword = document.getElementById('confirmPassword').value;
        var errorSpan = document.getElementById('passwordMisMatch');

        if (password !== confirmPassword) {
            errorSpan.textContent = 'Password do not match.';
            return false; // Prevent form submission
        }
        errorSpan.textContent = ''; // Clear error message
        return true;
    };
</script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
