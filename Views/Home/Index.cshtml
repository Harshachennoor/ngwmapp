<script>
    const colors = [
        { bgColor: '#080474', textColor: "#046307" }
    ];

    const percentages = document.querySelectorAll('.resultsWindow .percentage');
    let currentIndex = 0;

    function updateColors() {

        percentages.forEach(percentage => {
            percentage.style.color = '';
        });

        // Apply new styles to current index
        const currentColorScheme = colors[currentIndex % colors.length];
    @* percentages[currentIndex % percentages.length].style.backgroundColor = currentColorScheme.bgColor; *@
            percentages[currentIndex % percentages.length].style.color = currentColorScheme.textColor;

        // Move to the next item
        currentIndex++;
    }

    // Initial call
    updateColors();

    // Continue updating every 5 seconds
    setInterval(updateColors, 5000);

    function hoverEffect(element) {
        element.querySelector('img').style.opacity = "0.1";
    }

    function normalEffect(element) {
        element.querySelector('img').style.opacity = "1";
    }
</script>
<script>
    const industryDiv = document.querySelector('.industryDiv');
    const divs = document.querySelectorAll('.industryDivs');

    // Clone divs for a continuous loop effect
    divs.forEach(div => {
        const clone = div.cloneNode(true);
        industryDiv.appendChild(clone);
    });

    let currentPosition = 0;

    function animate() {
        // Move the divs to the left
        currentPosition -= 1; // Adjust speed as necessary

        // Apply the transformation
        industryDiv.style.transform = `translateX(${currentPosition}px)`;

        // Reset position when scrolling beyond the original total width
        const totalWidth = industryDiv.offsetWidth / 2;
        if (Math.abs(currentPosition) >= totalWidth) {
            currentPosition += totalWidth;
        }

        requestAnimationFrame(animate);
    }

    animate(); // Start the animation

</script>
